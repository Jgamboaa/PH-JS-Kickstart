{
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "phpmailer/phpmailer": "*",
    "phpoffice/phpspreadsheet": "*",
    "dompdf/dompdf": "*",
    "tecnickcom/tcpdf": "*",
    "spomky-labs/otphp": "*",
    "spatie/db-dumper": "*",
    "robmorgan/phinx": "*",
    "firebase/php-jwt": "^6.11",
    "vlucas/phpdotenv": "^5.6"
  },
  "scripts": {
    "serve": [
      "Composer\\Config::disableProcessTimeout",
      "php -S localhost:8000"
    ],
    "create_env": "cp .env_example .env",
    "migrate": "php vendor/bin/phinx migrate -c phinx.php",
    "seed": "php vendor/bin/phinx seed:run -c phinx.php",
    "create": "php vendor/bin/phinx create -c phinx.php",
    "create_seed": "php vendor/bin/phinx seed:create -c phinx.php",
    "rollback": "php vendor/bin/phinx rollback -c phinx.php",
    "status": "php vendor/bin/phinx status -c phinx.php"
  }
}
